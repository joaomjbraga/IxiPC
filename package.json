{
  "name": "ixipc",
  "productName": "IxiPC",
  "version": "0.1.0",
  "description": "Aplicação desktop para monitoramento de informações do sistema (CPU, memória, disco e SO).",
  "author": {
    "name": "João M J Braga",
    "email": "joomdeveloper.app@gmail.com",
    "url": "https://github.com/joaomjbraga"
  },
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "npm run typecheck && vite build && electron-builder",
    "build:win": "npm run typecheck && vite build && electron-builder --win",
    "build:linux": "npm run typecheck && vite build && electron-builder --linux",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "release": "electron-builder --publish always"
  },
  "dependencies": {
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}
